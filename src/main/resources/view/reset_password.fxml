<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="700.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.bakeacake.bakeacaketest.controller.ResetPasswordController">
    <children>
        <GridPane hgap="20.0" layoutX="243.0" layoutY="294.0">
            <children>
                <Label text="Username" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <Label text="Email" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Secret question" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <ComboBox fx:id="secretQuestionBox" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                <Label text="Answer" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                <TextField fx:id="answerField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                <Button mnemonicParsing="false" onAction="#resetPassword" text="Reset password" GridPane.rowIndex="7"/>
                <Button mnemonicParsing="false" onAction="#cancelResetPassword" text="Cancel" GridPane.columnIndex="1"
                        GridPane.rowIndex="7"/>
            </children>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints minHeight="10.0" prefHeight="30.0"/>
            </rowConstraints>
        </GridPane>
    </children>
</AnchorPane>
